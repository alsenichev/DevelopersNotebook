<Application x:Class="DevelopersNotebook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!--The order of dictionaries is important, because they
                reference each other-->
        <ResourceDictionary Source="ResourceDictionaries/LookAndFeel.xaml" />
        <ResourceDictionary Source="ResourceDictionaries/Icons.xaml" />
        <ResourceDictionary Source="ResourceDictionaries/Buttons.xaml"/>
        <ResourceDictionary Source="ResourceDictionaries/Converters.xaml"/>
        <ResourceDictionary Source="DataTemplates/NoteView.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
